{
  "name": "Java",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "remoteEnv": {
    "GRADLE_USER_HOME": "/workspace/.gradle",
    "DB_HOST": "postgres",
    "DB_PORT": "5432",
    "DB_NAME": "appdb",
    "DB_USER": "appuser",
    "DB_PASSWORD": "apppass",
    "SPRING_PROFILES_ACTIVE": "dev"
  },

  "forwardPorts": [8080, 5432]
}
